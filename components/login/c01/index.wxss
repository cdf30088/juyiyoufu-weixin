.login{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.login > .avatar{
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #ccc;
  display: block;
  margin:40% auto 70rpx auto;
  overflow: hidden;
}
.login >button{
  color:#fff;
  font-size: 28rpx;
  background: #16B516;
  border:none;
  width:250rpx;
}