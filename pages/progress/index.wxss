page{
  background: #F8F8F9;
}
.order{
  background: #fff;
  padding: 0 30rpx;
  margin-top:20rpx;
}
.order>.status{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #F8F8F9;
  font-size: 28rpx;
}
.order>.status>.dot{
  padding-right:10rpx; 
}
.order>.status>.curr{
  float: right;
  font-weight: bold;
}

.order>.info{
  border-bottom: 1rpx solid #F8F8F9;
  padding:20rpx 0;
}
.order>.info>.name{
  font-size: 30rpx;
  font-weight: bold;
}
.order>.info>.position,
.order>.info>.time{
  height: 40rpx;
  line-height: 40rpx;
  margin-top:15rpx;
}
.order>.option{
  height: 100rpx;
}
.order>.option>text{
  float: right;
  border:5rpx solid #F8F8F9;
  border-radius: 8rpx;
  padding:0 35rpx;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  margin:20rpx 0 0 30rpx;
}